@model IPartialModel

<div class="dc-drop-down-block @Model.Cls" @Model.Attrs>
    <div class="dcj-toggle-btn">
        <div class="dc-drop-down-block__wrapper">
            <h2 class="dcg-h2">Block</h2>
            <img class="dc-drop-down-block__arrow" src="~/assets/arrow.svg" alt="arrow">
        </div>
        <a class="dc-drop-down-block__close">
            <img src="~/assets/close.svg" alt="close">
        </a>
    </div>
    <div class="dc-drop-down-block__content">
        <tpl :BlockBtns />

        <div class="dc-drop-down-block__templates dcj-tmp-wrapper">
            <tpl :BlockTextInput />
        </div>
    </div>
</div>